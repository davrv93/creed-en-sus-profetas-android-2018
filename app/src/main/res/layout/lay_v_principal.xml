<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_black"
    android:onClick="onClick" >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/r_botones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/vacio_1"
                        android:layout_width="60dp"
                        android:layout_height="87dp"
                        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

                    <ImageView
                        android:id="@+id/btn_biblia"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onClick"
                        android:src="@drawable/biblia" />

                    <ImageView
                        android:id="@+id/btnCheck"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

                    <ImageView
                        android:id="@+id/btn_egw"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onClick"
                        android:src="@drawable/egw" />

                    <ImageView
                        android:id="@+id/vacio_2"
                        android:layout_width="60dp"
                        android:layout_height="87dp"
                        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_botones2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/vacio_3"
                        android:layout_width="60dp"
                        android:layout_height="87dp"
                        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

                    <ImageView
                        android:id="@+id/btn_calendar"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onClick"
                        android:src="@drawable/calendario" />

                    <ImageView
                        android:id="@+id/vacio_4"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

                    <ImageView
                        android:id="@+id/btn_settings"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onClick"
                        android:src="@drawable/settings" />

                    <ImageView
                        android:id="@+id/vacio_5"
                        android:layout_width="60dp"
                        android:layout_height="87dp"
                        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
